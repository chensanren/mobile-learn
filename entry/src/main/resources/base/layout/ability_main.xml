<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical"
    ohos:focus_border_width="2px"
    ohos:focus_border_enable="true"
    >

    <Text
        ohos:id="$+id:homepage_text"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:center_in_parent="true"
        ohos:background_element="$graphic:background_ability_main"
        ohos:layout_alignment="horizontal_center"
        ohos:text="$string:mainability_HelloWorld"
        ohos:text_size="40vp"
        />

    <Button
        ohos:id="$+id:homepage_button"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="$string:mainability_HomeButton"
        ohos:center_in_parent="true"
        ohos:layout_alignment="horizontal_center"
        ohos:below="$id:homepage_text"
        ohos:top_margin="20vp"
        ohos:padding="10vp"
        ohos:text_size="20vp"
        ohos:background_element="$graphic:button_sample"
        />

</DependentLayout>